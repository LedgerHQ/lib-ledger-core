    chainCode: binary;
}


BitcoinLikePublicKeyProvider = interface +j +o +n {
    get(path: string, params: BitcoinLikeNetworkParameters, callback: CompletionBlock<BitcoinLikePublicKey>);
}

BitcoinLikeBase58ExtendedPublicKeyProvider = interface +j +o + n {
